{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ES2023"],
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true,
    "libReplacement": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "docs/**/*.ts",
    "docs/**/*.vue",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue",
    "scripts/**/*.ts",
    "workers/**/*.ts",
    "tests/**/*.ts",
    "*.config.ts"
  ]
}
