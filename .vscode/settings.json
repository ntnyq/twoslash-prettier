{
  "oxc.enable": true,
  "eslint.enable": true,
  "prettier.enable": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never",
    "source.sortImports": "never"
  },
  "eslint.validate": [
    "vue",
    "yaml",
    "toml",
    "json",
    "jsonc",
    "json5",
    "markdown",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "typescript.experimental.useTsgo": true,
  "cSpell.words": [
    "bumpp",
    "changelogithub",
    "codecov",
    "esbuild",
    "iconify",
    "lcov",
    "oxfmt",
    "oxlint",
    "pkgr",
    "pnpm",
    "rehype",
    "Shiki",
    "shikijs",
    "tsdown",
    "tsgo",
    "unplugin",
    "unrs",
    "vite",
    "vitepress",
    "vitesse",
    "vitest"
  ],
  "cSpell.allowCompoundWords": true
}
